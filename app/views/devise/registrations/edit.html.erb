<div class="container-xxl flex-grow-1 container-p-y">
  <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"></span> Edit Profile</h4>

  <!-- Basic Layout & Basic with Icons -->
  <div class="row">
    <!-- Basic Layout -->
    <div class="col-xxl">
      <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
             <%= render "devise/shared/error_messages", resource: resource %>
            <div class="row mb-3">
              <%= f.label :first_name,class:"col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= f.text_field :first_name, autofocus: true, placeholder:"first name",class:"form-control" %>
              </div>
            </div>
            <div class="row mb-3">
              <%= f.label :last_name,class:"col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= f.text_field :last_name, autofocus: true, placeholder:"last name",class:"form-control" %>
              </div>
            </div>
            <div class="row mb-3">
              <%= f.label :email,class:"col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= f.email_field :email, autofocus: true,autocomplete:"email", placeholder:"email",class:"form-control" %>
              </div>
            </div>
            <div class="row mb-3">
              <%= f.label :profile,class:"col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= f.file_field :image, autofocus: true,class:"form-control" %>
              </div>
            </div>
            <div class="row mb-3">
              <%= f.label :DOB,class:"col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= f.date_field :date_of_birth, autofocus: true,class:"form-control" %>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-sm-10 from-check">
                <%= f.label :gender ,class:"col-sm-2 col-form-label" %>
                male<%= f.radio_button :gender, ['male']%>
                female<%= f.radio_button :gender, ['female']%>
              </div>
            </div>
             <div class="row mb-3">
              <%= f.label :password,class:"col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= f.password_field :password, autofocus: true, placeholder:"new password(Optional)",class:"form-control" %>
              </div>
            </div>
            <div class="row mb-3">
              <%= f.label :password_confirmation,class:"col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= f.password_field :password_confirmation, placeholder:"confirm password", autofocus: true,class:"form-control" %>
              </div>
            </div>
            <div class="row mb-3">
              <%= f.label :current_password,class:"col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= f.password_field :current_password , placeholder:"current password",autofocus: true,class:"form-control" %>
              </div>
            </div>
            <div class="row justify-content-end">
              <div class="col-sm-10">
               <%= f.submit "Update",class:'btn btn-primary' %>
            </div>
          <%end%>
        </div>
      </div>
    </div>  
  </div>
</div>