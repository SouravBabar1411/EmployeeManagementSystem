<div class="content-wrapper">
  <!-- Content -->
  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Change Password</h4>
    <div class="row">
      <div class="col-xxl">
        <div class="card mb-4">
          <div class="card-body">
            <%= form_for(resource, as: resource_name, html: {id: 'signupform' }, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%#= render "devise/shared/error_messages", resource: resource %>
              <div class="row mb-3">
                <%= f.label "password",autocomplete: "password",class:"col-sm-2 col-form-label"%>
                <div class="col-sm-10">
                  <div class="input-group input-group-merge">
                    <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-user"></i>
                    </span>
                    <%= f.password_field :password, class:"form-control"%>
                  </div>
                </div>
              </div>
              <div class="row mb-3">
                <%= f.label "password_confirmation",autocomplete: "password_confirmation",class:"col-sm-2 col-form-label"%>
                <div class="col-sm-10">
                  <div class="input-group input-group-merge">
                    <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-user"></i>
                    </span>
                    <%= f.password_field :password_confirmation, class:"form-control"%>
                  </div>
                </div>
              </div>
              <div class="row mb-3">
                <%= f.label "current_password",autocomplete: "current_password",class:"col-sm-2 col-form-label"%>
                <div class="col-sm-10">
                  <div class="input-group input-group-merge">
                    <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-user"></i>
                    </span>
                    <%= f.password_field :current_password, class:"form-control"%>
                  </div>
                </div>
              </div>
              <%#= render partial: "addresses/form", locals: {addressable: @user}%>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="row justify-content-end">
                <div class="col-sm-10">
                 <%= f.submit "Update", class:'btn btn-primary' %>
                </div>
              </div>
            <%end%>
          </div>
        </div>
      </div>  
    </div>
  </div>
</div>