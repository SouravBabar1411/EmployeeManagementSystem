<div class="content-wrapper">
  <div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
      <div class="col-xxl">
        <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Add Project</h5>
          </div>
        <div class="card-body">
          <%= form_with(class: 'project-form', model: (@project), local: true) do |f|%>
            <div class="row mb-3">
              <label class="col-sm-2 col-form-label" for="basic-icon-default-name">Name</label>
                <div class="col-sm-10">
                  <div class="input-group input-group-merge">
                    <span id="basic-icon-default-name2" class="input-group-text">
                    <i class="bx bx-code-block"></i></span>
                      <%= f.text_field :name, id:"basic-icon-default-name", class:"form-control", placeholder: "Enter Project Name", data: {error: "#errName"} %>
                  </div>
                   <span id="errName"></span>
                </div>
            </div>
            <div class="row mb-3">
              <label class="col-sm-2 col-form-label" for="html5-start-date-input" >Start Date</label>
                <div class="col-sm-10">
                  <div class="input-group input-group-merge">
                    <span id="basic-icon-default-company2" class="input-group-text">
                      <i class='bx bxs-calendar'></i>
                    </span>
                      <%= f.date_field :start_date, id:"html5-start-date-input", class:"form-control", data: {error: "#errStartDate"} %>
                  </div>
                    <span id="errStartDate"></span>
                </div>
              </div>
              <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="html5-end-date-input">end_date</label>
                  <div class="col-sm-10">
                    <div class="input-group input-group-merge">
                      <span class="input-group-text">
                        <i class='bx bxs-calendar'></i>
                      </span>
                      <%= f.date_field :end_date, id:"html5-end-date-input", class:"form-control", data: {error: "#errEndDate"} %>
                    </div>
                      <span id="errEndDate"></span>
                  </div>
              </div>
              <div class="row mb-3">
                <label class="col-sm-2 form-label">Status</label>
                  <div class="col-sm-10">
                    <%= f.check_box :is_active, class:"form-check-input", id:"status" %>
                  <label class="form-check-label" for="status">Active</label>
                  </div>
              </div>
              <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="html5-select-projects">Assign To</label>
                  <div class="col-sm-10">
                    <div class="input-group input-group-merge" id="html5-select-projects">
                      <%= f.collection_select(:user_ids, User.all, :id, :first_name, { :prompt => 'Select an Employees' }, { class: 'form-control js-example-basic-multiple',multiple: true, data: {error: "#errAssignEmployee"}}) %>
                    </div>
                      <span id="errAssignEmployee"></span>

                  </div>
              </div>
              <div class="col-sm-10">
                <%= f.hidden_field :company_id, value: 1 %>
              </div>
              <div class="row justify-content-end">
                <div class="col-sm-10">
                   <%= f.submit button_text, class:'btn btn-primary'%>
                </div>
                <div class="col-sm-3 project-back-btn">
                   <%= link_to 'Back', projects_path, class:'btn btn-primary mb-2' %>
                </div>
          <% end %>
        </div>
          <span id="errStartDate"></span>
      </div>
    </div>
  </div>
    <div class="row mb-3">
      <label class="col-sm-2 col-form-label" for="html5-end-date-input">end_date</label>
        <div class="col-sm-10">
          <div class="input-group input-group-merge">
            <span class="input-group-text">
              <i class='bx bxs-calendar'></i>
            </span>
            <%= f.date_field :end_date, id:"html5-end-date-input", class:"form-control", data: {error: "#errEndDate"} %>
          </div>
            <span id="errEndDate"></span>
        </div>
    </div>
    <div class="row mb-3">
      <label class="col-sm-2 form-label">Status</label>
        <div class="col-sm-10">
          <%= f.check_box :is_active, class:"form-check-input", id:"status" %>
        <label class="form-check-label" for="status">Active</label>
        </div>
    </div>
    <div class="col-sm-10">
      <%= f.hidden_field :company_id, value: 1 %>
    </div>
    <div class="row justify-content-end">
      <div class="col-sm-10">
         <%= f.submit button_value, class:'btn btn-primary'%>
      </div>
      <div class="col-sm-3 project-back-btn">
         <%= link_to 'Back', projects_path, class:'btn btn-primary mb-2' %>
    </div>
<% end %>