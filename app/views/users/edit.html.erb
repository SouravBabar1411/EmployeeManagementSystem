<div class="content-wrapper">
  <!-- Content -->
  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Edit profile</h4>
    <div class="row">
      <div class="col-xxl">
        <div class="card mb-4">
          <div class="card-body">
            <%= form_with(model: @user,html: {id: ''}, local: true) do |f| %>
              <center><h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"></span> Personal Details</h4></center>
              <div class="row mb-3">
                <%= f.label "first_name",autocomplete: "first_name",class:"col-sm-2 col-form-label"%>
                <div class="col-sm-10">
                  <div class="input-group input-group-merge">
                    <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-user"></i>
                    </span>
                    <%= f.text_field :first_name, class:"form-control"%>
                  </div>
                </div>
              </div>
              <div class="row mb-3">
                <%= f.label "last_name",autocomplete: "last_name",class:"col-sm-2 col-form-label"%>
                <div class="col-sm-10">
                  <div class="input-group input-group-merge">
                    <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-user"></i>
                    </span>
                    <%= f.text_field :last_name, class:"form-control"%>
                  </div>
                </div>
              </div>
              <div class="row mb-3">
                <%= f.label "email",autocomplete: "email",class:"col-sm-2 col-form-label"%>
                <div class="col-sm-10">
                  <div class="input-group input-group-merge">
                    <span id="basic-icon-default-fullname2" class="input-group-text"><i class='bx bx-envelope'></i>
                    </span>
                    <%= f.email_field :email, class:"form-control"%>
                  </div>
                </div>
              </div>
              <div class="row mb-3">
                <%= f.label :profile_image,class:"col-sm-2 col-form-label" %>
                <div class="col-sm-10">
                  <%= f.file_field :image, autofocus: true,class:"form-control" %>
                </div>
              </div>
              <div class="row mb-3">
                <%= f.label :DOB,class:"col-sm-2 col-form-label" %>
                <div class="col-sm-10">
                  <%= f.date_field :date_of_birth, autofocus: true,class:"form-control" %>
                </div>
              </div>
              <div class="row mb-3">
                <%= f.label :gender ,class:"col-sm-2 col-form-label" %>
                <div class="col-sm-10 from-check">
                  male<%= f.radio_button :gender, ['male']%>
                  female<%= f.radio_button :gender, ['female']%>
                </div>
              </div>
              <%#= render partial: "addresses/form", locals: {addressable: @user}%>
               <div class="col-sm-10">
                <%= f.submit "Update",class:'btn btn-primary' %>
               </div>
            <%end%>
          </div>
        </div>
      </div>  
    </div>
  </div>
</div>