<div class="content-wrapper">
  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Timesheet List</h4>
    <div class="card">
      <h5 class="card-header">Timesheet</h5>
      <div class="table-responsive text-nowrap">
        <table class="table" id="timesheetTable">
          <caption class="ms-4">
            List of timesheets
          </caption>
          <thead>
            <tr>
              <th>Date</th>
              <th>Time</th>
              <th>Name</th>
              <th>Project Name</th>
              <th>Job Name</th>
              <th>Description</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @timesheets.each do |timesheet| %>
              <tr>
                <td><%= timesheet.current_date %></td>
                <td><%= timesheet.time %></td>
                <td><%= timesheet.user_id %></td>
                <td><%= timesheet.project_id %></td>
                <td><%= timesheet.job_id %></td>
                <td><%= timesheet.description %></td>
                <td>
                  <div class="dropdown">
                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                      <i class="bx bx-dots-vertical-rounded"></i>
                    </button>
                    <div class="dropdown-menu">
                      <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                      <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Delete</a>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <a href='/timesheets/new' class="btn btn-primary mb-2"><i class='fa fa-plus'></i><span>Add timesheet</span> </a>
      </div>
    </div>
  </div>
</div>