<%= form_with(model: timesheet,html: {id:'timesheetValidate'}, local: true) do |form| %>
  <% if timesheet.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% timesheet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb-3">
    <%= form.label "Date", class:"col-sm-2 col-form-label"%>
    <div class="col-sm-10">
        <div class="input-group input-group-merge">
          <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-calendar"></i>
          </span>
          <%= form.text_field :current_date, class:"form-control datepicker"%>
        </div>
    </div>
  </div>

  <div class="row mb-3">
    <%= form.label "Time", class:"col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <div class="input-group input-group-merge">
        <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-time"></i>
        </span>
        <%= form.text_field :time, class:"form-control timepicker"%>
      </div>
    </div>
  </div>

  <div class="row mb-3">
    <%= form.label "Employee",class:"col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <div class="input-group input-group-merge">
        <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-user"></i>
        </span>
        <%= form.text_field :user_id, value: current_user.first_name, disabled: "true", class:"form-control"%>
      </div>
    </div>
  </div>

  <div class="row mb-3">
    <%= form.label "Description",class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <div class="input-group input-group-merge">
      <span id="basic-icon-default-edit2" class="input-group-text"><i class="bx bx-edit"></i>
      </span>
      <%= form.text_field :description, class:"form-control" %>
      </div>
    </div>
  </div>

  <div class="row mb-3">
    <%= form.label "Project",class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <div class="input-group input-group-merge">
          <%= form.collection_select(:project_id, Project.all, :id, :name, { :prompt => 'All Projects', :selected => @timesheet.project_id }, { class: 'form-control js-example-basic-multiple' }) %>
      </div>
    </div>
  </div>

  <div class="row mb-3">
    <%= form.label "Job", class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <div class="input-group input-group-merge">
        <%= form.collection_select(:job_id, Job.all, :id, :name, { :prompt => 'All Jobs', :selected => @timesheet.job_id }, { class: 'form-control js-example-basic-multiple' }) %>
    </div>
    <div>
  </div>
  <br/>

  <div class="col-sm-10">
    <div class="actions mb-2">
      <%= form.submit class:'btn btn-primary' %>
    </div>
  </div>
<% end %>
