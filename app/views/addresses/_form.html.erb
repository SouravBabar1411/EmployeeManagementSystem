<%= form_with(model: [addressable, Address.new], local: true) do |f| %>
  <center><h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"></span> Address Details</h4></center>
  <div class="row mb-3">
    <%= f.label "address_line_1",class:"col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <div class="input-group input-group-merge">
        <span id="basic-icon-default-fullname2" class="input-group-text"><i class='bx bx-current-location'></i>
        </span>
        <%= f.text_field :address_line_1, placeholder:"address",class:"form-control"%>
      </div>
    </div>
  </div>
   <div class="row mb-3">
    <%= f.label "address_line_2",class:"col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <div class="input-group input-group-merge">
        <span id="basic-icon-default-fullname2" class="input-group-text"><i class='bx bx-current-location'></i>
        </span>
        <%= f.text_field :address_line_2, placeholder:"address", class:"form-control"%>
      </div>
    </div>
  </div>
  <div class="row mb-3">
    <%= f.label "city",class:"col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <div class="input-group input-group-merge">
        <span id="basic-icon-default-fullname2" class="input-group-text"><i class='bx bxs-city'></i>
        </span>
        <%= f.text_field :city, placeholder:"city",class:"form-control"%>
      </div>
    </div>
  </div>
  <div class="row mb-3">
    <%= f.label "state",class:"col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <div class="input-group input-group-merge">
        <span id="basic-icon-default-fullname2" class="input-group-text"><i class='bx bx-building'></i></i>
        </span>
        <%= f.text_field :state,  placeholder:"state",class:"form-control"%>
      </div>
    </div>
  </div>
  <div class="row mb-3">
    <%= f.label "country",class:"col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <div class="input-group input-group-merge">
        <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-user"></i>
        </span>
        <%= f.text_field :country, placeholder:"country", class:"form-control"%>
      </div>
    </div>
  </div>
  <div class="row mb-3">
    <%= f.label "zipcode",class:"col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <div class="input-group input-group-merge">
        <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-user"></i>
        </span>
        <%= f.text_field :zipcode, placeholder:"zipcode", class:"form-control"%>
      </div>
    </div>
  </div>
  <%= f.submit class: "btn btn-primary" %>  
<% end %>
 