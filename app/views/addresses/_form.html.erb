<%= form_with(model: [addressable, Address.new], local: true) do |form| %>
  <div class="field">
    <%= form.label :address_line_1 %></br>
    <%= form.text_area :address_line_1 %>
  </div>
  <div class="field">
    <%= form.label :address_line_2 %></br>
    <%= form.text_area :address_line_2 %>
  </div>
  <div class="field">
    <%= form.label :city %></br>
    <%= form.text_field :city %>
  </div>
  <div class="field">
    <%= form.label :state %></br>
    <%= form.text_field :state%>
  </div>
  <div class="field">
    <%= form.label :country %></br>
    <%= form.text_field :country %>
  </div>
  <div class="field">
    <%= form.label :zipcode %></br>
    <%= form.text_field :zipcode %>
  </div>
  <%= form.submit class: "btn btn-primary" %>  
<% end %>